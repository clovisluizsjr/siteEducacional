<div class="flex p-4">
    <h3><i class="fas fa-tasks mr-2"></i>Atividades</h3>
    
    <% if (listaAtividades.length > 0) { %>
      <div class="mt-4">
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title">
              <%= listaDisciplinas[listaAtividades[0].disciplina_id].disciplina_nome %>
              <span class="badge <%= listaAtividades[0].atividadeAluno_notaAluno ? 'bg-success' : 'bg-secondary' %> float-end">
                Nota: <%= listaAtividades[0].atividadeAluno_notaAluno || 'Pendente' %>
              </span>
            </h5>
            <h6 class="card-subtitle mb-2 text-muted">
              Entregue em: <%= new Date(listaAtividades[0].atividadeAluno_prazoEntrega).toLocaleDateString('pt-BR') %>
            </h6>
            <% if (listaAtividades[0].atividadeAluno_feedbackProf) { %>
              <div class="alert alert-info mt-2">
                <strong>Feedback:</strong> <%= listaAtividades[0].atividadeAluno_feedbackProf %>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    <% } else { %>
        <i class="fas fa-info-circle me-2"></i> Nenhuma atividade encontrada.
    <% } %>
  
    <hr class="my-4">
    
    <div class="d-flex justify-content-between">
      <p class="text-muted">
       <%= listaAtividades.length %> atividade(s)
      </p>
    
    </div>
  </div>
  