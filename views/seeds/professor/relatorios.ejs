<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <title>Relatório de Notas</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
</head>

<body class="p-4">

    <div class="container">
        <h1 class="mb-4">Relatório de Notas</h1>

        <!-- Filtro -->
        <div class="mb-3">
            <input type="text" id="filtro" class="form-control"
                placeholder="Filtrar por nome do aluno, turma, atividade...">
        </div>

        <!-- Botões -->
        <div class="mb-3 d-flex gap-2">
            <button id="btn-filtrar" class="btn btn-primary">Filtrar</button>
            <button id="btn-exportar-excel" class="btn btn-success">Exportar Excel</button>
            <button id="btn-exportar-pdf" class="btn btn-danger">Exportar PDF</button>
        </div>

        <!-- Tabela -->
        <div class="table-responsive">
            <table id="tabelaRelatorio" class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Turma</th>
                        <th>Disciplina</th>
                        <th>Atividade</th>
                        <th>Aluno</th>
                        <th>Nota</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (relatorio.length===0) { %>
                        <tr>
                            <td colspan="5" class="text-center">Nenhum dado encontrado.</td>
                        </tr>
                        <% } else { %>
                            <% relatorio.forEach(item=> { %>
                                <tr>
                                    <td>
                                        <%= item.turma_nome %>
                                    </td>
                                    <td>
                                        <%= item.disciplina_nome %>
                                    </td>
                                    <td>
                                        <%= item.atividade_titulo %>
                                    </td>
                                    <td>
                                        <%= item.aluno_nome %> (<%= item.aluno_RA %>)
                                    </td>
                                    <td>
                                        <%= item.nota !==null ? item.nota : 'Não atribuída' %>
                                    </td>
                                </tr>
                                <% }) %>
                                    <% } %>
                </tbody>
            </table>
        </div>
    </div>